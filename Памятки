Http запрос

	Для Каждого Эл Из НастройкиСКД.ПараметрыДанных.Элементы Цикл 
		
		Если Эл.Параметр = ПарПериод Тогда
			НачалоПериода = Эл.Значение.ДатаНачала;
			ОкончаниеПериода = Эл.Значение.ДатаОкончания;
		КонецЕсли;
	
		Если Эл.Параметр = ПарОрганизация Тогда
			Организация = Эл.Значение; 
		КонецЕсли; 
	КонецЦикла;
 		
	ДопУсловие1 = "";
	ДопУсловие2 = "";
	ДопУсловие3 = "";
	
	ТекстсЗапроса = 
	"ВЫБРАТЬ   
	|	ХозрасчетныйОбороты.Субконто1 КАК Субконто1,
	|   ХозрасчетныйОбороты.Организация КАК Организация,
	|	ХозрасчетныйОбороты.Субконто1.КодТНВЭД КАК КодТНВЭД,
	|   ХозрасчетныйОбороты.Субконто1.ВЭД_ВесНетто КАК ВесНетто,
	|	ХозрасчетныйОбороты.Субконто1.ВЭД_Весбрутто КАК ВесБрутто,
	|	ХозрасчетныйОбороты.Субконто1.ВЭД_ВесТары КАК ВесТары
	|ИЗ 
	|	РегистрБухгалтерии.Хозрасчетный.Обороты(&НачалоПериода,&ОкончаниеПериода,,Счет = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.ТоварыНаСкладах),,,,)	КАК ХозрасчетныйОбороты";	
	
	ПараметрыЗапроса = Новый Массив;
	ПараметрыЗапроса.Добавить(Новый Структура("Имя, Значение", "ИНН", Организация.ИНН));
	ПараметрыЗапроса.Добавить(Новый Структура("Имя, Значение", "НачалоПериода", НачалоПериода));
	ПараметрыЗапроса.Добавить(Новый Структура("Имя, Значение", "ОкончаниеПериода", ОкончаниеПериода));
	
	МассивТипы = Новый Массив;
    МассивТипы.Добавить(Новый Структура("Тип, Имя, Внутр","Справочники","Номенклатура", ЗначениеВСтрокуВнутр(Справочники.Номенклатура.ПустаяСсылка())));

	
	Запрос = Новый Структура;
	Запрос.Вставить("Текст", ТекстсЗапроса);
	Запрос.Вставить("Параметры", ПараметрыЗапроса);
	Запрос.Вставить("Типы", МассивТипы);
	
	ВхЗапрос = ЗначениеВСтрокуВнутр(Запрос);
